@* @model GestordeTaras.EN.Categoria *@
@model GestordeTareas.UI.DTOs.CategoriaDTOs.CategoriaUpdateDto
<form asp-action="Edit" id="editForm" class="bg-white rounded px-8 pt-6 pb-8 mb-4 border border-purple-700">

       <input type="hidden" asp-for="Id" />

       <div asp-validation-summary="ModelOnly" class="text-red-500 mb-3"></div>

       <div class="mb-4">
              <label asp-for="Nombre" class="block text-gray-700 text-sm font-bold mb-2"></label>
              <input asp-for="Nombre" class="border-b-2 border-purple-700 w-full py-2 px-3 text-gray-700 leading-tight
                      focus:outline-none focus:border-purple-500" placeholder="Nombre de la Categoría" />

              <span asp-validation-for="Nombre" class="text-red-500 text-xs italic"></span>
       </div>
</form>